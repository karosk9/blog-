<h2> New Article</h2>

<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.label :title %> <br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :text %> <br>
    <%= f.text_area :text, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :tag %> <br>
    <%= f.text_field :tag, class: "form-control" %>
  </div>
  <p>
    <%= f.submit class: "btn btn-success" %> <br>
  </p>
<% end %>

<%= render 'form' %>